<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matchpictures">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="MatchPicture"
        android:supportsRtl="true"
        android:theme="@style/Theme.MatchPictures">
        <activity android:name="main.matchpictures.PlayScreen"></activity>
        <activity android:name="main.matchpictures.HelpScreen"></activity>
        <activity android:name="main.matchpictures.ScoreScreen"></activity>
        <activity android:name="main.matchpictures.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>